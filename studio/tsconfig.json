{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
    // No "types" or "typeRoots" referencing "next"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".sanity/**/*.ts",
    ".sanity/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
